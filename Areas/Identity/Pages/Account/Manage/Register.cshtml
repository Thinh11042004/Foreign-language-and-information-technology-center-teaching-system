@using Hệ_thống_dạy_học_trung_tâm_ngoại_ngữ_và_tin_học.Models.ViewModel.Account
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header text-center mb-4">
            <div class="auth-logo mb-3">
                <i class="fas fa-user-plus fa-3x text-success"></i>
            </div>
            <h2 class="fw-bold">Create Account</h2>
            <p class="text-muted">Join our learning community</p>
        </div>

        <form id="registerForm" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Password strength indicator -->
            <div class="mb-3">
                <div class="password-strength">
                    <div class="strength-meter">
                        <div class="strength-meter-fill" id="strengthMeter"></div>
                    </div>
                    <small id="strengthText" class="text-muted">Password strength: Weak</small>
                </div>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                    <label class="form-check-label" for="agreeTerms">
                        I agree to the <a href="#" class="text-decoration-none">Terms of Service</a>
                        and <a href="#" class="text-decoration-none">Privacy Policy</a>
                    </label>
                </div>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="newsletter">
                    <label class="form-check-label" for="newsletter">
                        Subscribe to our newsletter for updates and offers
                    </label>
                </div>
            </div>

            <div class="d-grid mb-3">
                <button id="registerButton" type="submit" class="btn btn-success btn-lg">
                    <span class="register-text">
                        <i class="fas fa-user-plus me-2"></i>Create Account
                    </span>
                    <span class="register-spinner d-none">
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        Creating account...
                    </span>
                </button>
            </div>

            <hr class="my-4">

            <div class="text-center">
                <p class="mb-2">Already have an account?</p>
                <a asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="btn btn-outline-primary">
                    <i class="fas fa-sign-in-alt me-2"></i>Sign In
                </a>
            </div>
        </form>
    </div>

    <!-- Registration benefits -->
    <div class="auth-features d-none d-lg-block">
        <h4 class="text-white mb-4">Join Our Community</h4>
        <div class="benefit-list">
            <div class="benefit-item mb-4">
                <div class="benefit-icon mb-2">
                    <i class="fas fa-gift fa-2x text-warning"></i>
                </div>
                <h6 class="text-white">Free Trial Classes</h6>
                <small class="text-light opacity-75">Try our courses before committing</small>
            </div>
            <div class="benefit-item mb-4">
                <div class="benefit-icon mb-2">
                    <i class="fas fa-users fa-2x text-info"></i>
                </div>
                <h6 class="text-white">Learning Community</h6>
                <small class="text-light opacity-75">Connect with fellow learners</small>
            </div>
            <div class="benefit-item mb-4">
                <div class="benefit-icon mb-2">
                    <i class="fas fa-trophy fa-2x text-success"></i>
                </div>
                <h6 class="text-white">Achievement Tracking</h6>
                <small class="text-light opacity-75">Monitor your progress</small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Password strength checker
            $('#Password').on('input', function() {
                var password = $(this).val();
                var strength = checkPasswordStrength(password);
                updatePasswordStrengthIndicator(strength);
            });

            // Password toggle
            $('#togglePassword').click(function() {
                var passwordField = $('#Password');
                var passwordFieldType = passwordField.attr('type');

                if (passwordFieldType === 'password') {
                    passwordField.attr('type', 'text');
                    $(this).find('i').removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordField.attr('type', 'password');
                    $(this).find('i').removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Form submission
            $('#registerForm').submit(function() {
                var $button = $('#registerButton');
                $button.prop('disabled', true);
                $button.find('.register-text').addClass('d-none');
                $button.find('.register-spinner').removeClass('d-none');
            });
        });

        function checkPasswordStrength(password) {
            var strength = 0;

            if (password.length >= 8) strength++;
            if (password.match(/[a-z]/)) strength++;
            if (password.match(/[A-Z]/)) strength++;
            if (password.match(/[0-9]/)) strength++;
            if (password.match(/[^a-zA-Z0-9]/)) strength++;

            return strength;
        }

        function updatePasswordStrengthIndicator(strength) {
            var $meter = $('#strengthMeter');
            var $text = $('#strengthText');

            var strengthTexts = ['Very Weak', 'Weak', 'Fair', 'Good', 'Strong'];
            var strengthColors = ['#dc3545', '#fd7e14', '#ffc107', '#198754', '#0d6efd'];

            var strengthIndex = Math.min(strength, 4);
            var percentage = (strength / 5) * 100;

            $meter.css({
                'width': percentage + '%',
                'background-color': strengthColors[strengthIndex]
            });

            $text.text('Password strength: ' + strengthTexts[strengthIndex])
                .css('color', strengthColors[strengthIndex]);
        }
    </script>
}