@page
@model IndexModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link rel="stylesheet" href="~/css/Profile.css" />

<h2 class="mb-4">@ViewData["Title"]</h2>
<partial name="_StatusMessage" for="StatusMessage" />

<form method="post" id="profile-form">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

    <div class="row">
        <!-- Cột trái -->
        <div class="col-md-6">
            <!-- Full Name -->
            <div class="form-floating mb-3">
                <input asp-for="Input.FullName" class="form-control" placeholder="Nguyễn Văn A" />
                <label asp-for="Input.FullName">
                    <i class="fas fa-user me-2 text-primary"></i> Họ và tên
                </label>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <!-- Phone -->
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Số điện thoại" />
                <label asp-for="Input.PhoneNumber">
                    <i class="fas fa-phone me-2 text-primary"></i> Số điện thoại
                </label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Address -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" placeholder="Địa chỉ" />
                <label asp-for="Input.Address">
                    <i class="fas fa-map-marker-alt me-2 text-primary"></i> Địa chỉ
                </label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="col-md-6">
            <!-- Username -->
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" disabled placeholder="Email" />
                <label asp-for="Username">
                    <i class="fas fa-envelope me-2 text-secondary"></i> Email
                </label>
            </div>

            <!-- Age -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Age" class="form-control" placeholder="5-60" />
                <label asp-for="Input.Age">
                    <i class="fas fa-birthday-cake me-2 text-primary"></i> Tuổi
                </label>
                <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>

            <!-- School Name -->
            <div class="form-floating mb-3">
                <input asp-for="Input.SchoolName" class="form-control" placeholder="Trường Đại học ABC" />
                <label asp-for="Input.SchoolName">
                    <i class="fas fa-graduation-cap me-2 text-primary"></i> Trường học
                </label>
                <span asp-validation-for="Input.SchoolName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-lg btn-primary px-5">
            <i class="fas fa-save me-2"></i> Lưu thay đổi
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
