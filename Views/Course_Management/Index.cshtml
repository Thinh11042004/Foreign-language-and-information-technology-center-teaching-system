@{
    ViewData["Title"] = "EduManager - Quản lý Khóa học";
    Layout = null;
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/hover.css/2.3.1/css/hover-min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/Course_Management_index.css">
</head>
<body>
    <div class="main-container">
        <!-- Header -->
        <header class="header">
            <div class="header-content">
                <div class="header-title">
                    <div class="header-icon">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <div class="header-text">
                        <h1>Quản lý Khóa học</h1>
                        <p>Tạo và quản lý các khóa học một cách hiệu quả</p>
                    </div>
                </div>
                <div class="header-actions">
                    <a class="btn btn-secondary" href="@Url.Action("Index", "DashBoard", new { area = "" })">
                            <i class="fas fa-chart-bar"></i> Thống kê
                    </a>
                    <button class="btn btn-primary" onclick="openCreateModal()">
                        <i class="fas fa-plus"></i> Tạo khóa học
                    </button>
                </div>
            </div>
        </header>

        <!-- Stats Grid -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-book"></i>
                    </div>
                    <div class="stat-trend trend-up">
                        <i class="fas fa-arrow-up"></i> +12%
                    </div>
                </div>
                <div class="stat-number">156</div>
                <div class="stat-label">Tổng khóa học</div>
            </div>
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-trend trend-up">
                        <i class="fas fa-arrow-up"></i> +8%
                    </div>
                </div>
                <div class="stat-number">89</div>
                <div class="stat-label">Đang hoạt động</div>
            </div>
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <div class="stat-trend trend-up">
                        <i class="fas fa-arrow-up"></i> +25%
                    </div>
                </div>
                <div class="stat-number">2,847</div>
                <div class="stat-label">Học sinh đăng ký</div>
            </div>
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="stat-trend trend-up">
                        <i class="fas fa-arrow-up"></i> +0.3
                    </div>
                </div>
                <div class="stat-number">4.8</div>
                <div class="stat-label">Đánh giá trung bình</div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="content-left">
                <!-- Course List -->
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            <div class="card-icon">
                                <i class="fas fa-list"></i>
                            </div>
                            Danh sách khóa học
                        </div>
                        <button class="btn btn-primary btn-small" onclick="openCreateModal()">
                            <i class="fas fa-plus"></i> Thêm mới
                        </button>
                    </div>

                    <!-- Search and Filter -->
                    <div class="search-filter">
                        <div class="search-box">
                            <i class="fas fa-search search-icon"></i>
                            <input type="text" class="search-input" placeholder="Tìm kiếm khóa học...">
                        </div>
                        <select class="filter-select">
                            <option>Tất cả trạng thái</option>
                            <option>Hoạt động</option>
                            <option>Nháp</option>
                            <option>Tạm dừng</option>
                        </select>
                        <select class="filter-select">
                            <option>Tất cả danh mục</option>
                            <option>Toán học</option>
                            <option>Vật lý</option>
                            <option>Hóa học</option>
                        </select>
                    </div>

                    <!-- Courses Grid -->
                    <div class="courses-grid">
                        <div class="course-card">
                            <div class="course-header">
                                <div class="course-info">
                                    <h3>Toán học cơ bản</h3>
                                    <div class="course-meta">Lớp 10 • Học kỳ 1 • Nguyễn Văn A</div>
                                </div>
                                <span class="status-badge status-active">Hoạt động</span>
                            </div>
                            <p class="course-description">
                                Khóa học cung cấp kiến thức nền tảng về đại số và hình học cho học sinh lớp 10, bao gồm các bài tập thực hành và ôn tập.
                            </p>
                            <div class="course-stats">
                                <div class="course-stat">
                                    <i class="fas fa-users"></i> 45 học sinh
                                </div>
                                <div class="course-stat">
                                    <i class="fas fa-book-open"></i> 24 bài học
                                </div>
                                <div class="course-stat">
                                    <i class="fas fa-star"></i> 4.8/5
                                </div>
                                <div class="course-stat">
                                    <i class="fas fa-money-bill-wave"></i> ₫2.0M
                                </div>
                            </div>
                            <div class="course-actions">
                                <button class="btn btn-success btn-small">
                                    <i class="fas fa-rocket"></i> Kích hoạt
                                </button>
                                <button class="btn btn-primary btn-small">
                                    <i class="fas fa-edit"></i> Chỉnh sửa
                                </button>
                                <button class="btn btn-secondary btn-small">
                                    <i class="fas fa-eye"></i> Xem chi tiết
                                </button>
                            </div>
                        </div>

                        <div class="course-card">
                            <div class="course-header">
                                <div class="course-info">
                                    <h3>Sinh học phân tử</h3>
                                    <div class="course-meta">Lớp 12 • Nâng cao • Phạm Thị D</div>
                                </div>
                                <span class="status-badge status-draft">Nháp</span>
                            </div>
                            <p class="course-description">
                                Khóa học chuyên sâu về sinh học phân tử, di truyền học và công nghệ sinh học hiện đại cho học sinh giỏi.
                            </p>
                            <div class="course-stats">
                                <div class="course-stat">
                                    <i class="fas fa-users"></i> 0 học sinh
                                </div>
                                <div class="course-stat">
                                    <i class="fas fa-book-open"></i> 12 bài học
                                </div>
                                <div class="course-stat">
                                    <i class="fas fa-star"></i> Chưa có
                                </div>
                                <div class="course-stat">
                                    <i class="fas fa-money-bill-wave"></i> ₫2.2M
                                </div>
                            </div>
                            <div class="course-actions">
                                <button class="btn btn-primary btn-small">
                                    <i class="fas fa-edit"></i> Hoàn thiện
                                </button>
                                <button class="btn btn-secondary btn-small">
                                    <i class="fas fa-eye"></i> Xem trước
                                </button>
                                <button class="btn btn-secondary btn-small">
                                    <i class="fas fa-trash"></i> Xóa nháp
                                </button>
                            </div>
                        </div>

                        <div class="course-card">
                            <div class="course-header">
                                <div class="course-info">
                                    <h3>Tiếng Anh giao tiếp</h3>
                                    <div class="course-meta">Đa cấp • Kỹ năng • Sarah Johnson</div>
                                </div>
                                <span class="status-badge status-active">Hoạt động</span>
                            </div>
                            <p class="course-description">
                                Khóa học tiếng Anh giao tiếp thực tế với nhiều tình huống thực tế và bài tập phát âm chuẩn.
                            </p>
                            <div class="course-stats">
                                <div class="course-stat">
                                    <i class="fas fa-users"></i> 67 học sinh
                                </div>
                                <div class="course-stat">
                                    <i class="fas fa-book-open"></i> 36 bài học
                                </div>
                                <div class="course-stat">
                                    <i class="fas fa-star"></i> 4.6/5
                                </div>
                                <div class="course-stat">
                                    <i class="fas fa-money-bill-wave"></i> ₫1.2M
                                </div>
                            </div>
                            <div class="course-actions">
                                <button class="btn btn-primary btn-small">
                                    <i class="fas fa-edit"></i> Chỉnh sửa
                                </button>
                                <button class="btn btn-secondary btn-small">
                                    <i class="fas fa-eye"></i> Xem chi tiết
                                </button>
                                <button class="btn btn-secondary btn-small">
                                    <i class="fas fa-chart-bar"></i> Thống kê
                                </button>
                            </div>
                        </div>

                        <div class="course-card">
                            <div class="course-header">
                                <div class="course-info">
                                    <h3>Lập trình Python cơ bản</h3>
                                    <div class="course-meta">Kỹ thuật • Cơ bản • Hoàng Minh E</div>
                                </div>
                                <span class="status-badge status-active">Hoạt động</span>
                            </div>Thao tác nhanh

                            <p class="course-description">
                                Khóa học lập trình Python từ cơ bản đến nâng cao, phù hợp cho người mới bắt đầu học lập trình.
                            </p>
                            <div class="course-stats">
                                <div class="course-stat">
                                    <i class="fas fa-users"></i> 89 học sinh
                                </div>
                                <div class="course-stat">
                                    <i class="fas fa-book-open"></i> 42 bài học
                                </div>
                                <div class="course-stat">
                                    <i class="fas fa-star"></i> 4.9/5
                                </div>
                                <div class="course-stat">
                                    <i class="fas fa-money-bill-wave"></i> ₫2.5M
                                </div>
                            </div>
                            <div class="course-actions">
                                <button class="btn btn-primary btn-small">
                                    <i class="fas fa-edit"></i> Chỉnh sửa
                                </button>
                                <button class="btn btn-secondary btn-small">
                                    <i class="fas fa-eye"></i> Xem chi tiết
                                </button>
                                <button class="btn btn-secondary btn-small">
                                    <i class="fas fa-chart-bar"></i> Thống kê
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Pagination -->
                    <div class="pagination">
                        <button class="pagination-btn">
                            <i class="fas fa-chevron-left"></i>
                        </button>
                        <button class="pagination-btn active">1</button>
                        <button class="pagination-btn">2</button>
                        <button class="pagination-btn">3</button>
                        <button class="pagination-btn">...</button>
                        <button class="pagination-btn">12</button>
                        <button class="pagination-btn">
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>   

                <!-- Recent Activity -->
                <div class="recent-activity">
                    <div class="card-header">
                        <div class="card-title">
                            <div class="card-icon">
                                <i class="fas fa-clock"></i>
                            </div>
                            Hoạt động gần đây
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-avatar">A</div>
                        <div class="activity-content">
                            <p><strong>Nguyễn Văn A</strong> đã cập nhật khóa học "Toán học cơ bản"</p>
                            <div class="activity-time">5 phút trước</div>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-avatar">B</div>
                        <div class="activity-content">
                            <p><strong>Trần Thị B</strong> đã thêm 3 bài học mới vào "Vật lý nâng cao"</p>
                            <div class="activity-time">12 phút trước</div>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-avatar">C</div>
                        <div class="activity-content">
                            <p><strong>Lê Văn C</strong> đã tạo khóa học mới "Hóa học hữu cơ"</p>
                            <div class="activity-time">1 giờ trước</div>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-avatar">D</div>
                        <div class="activity-content">
                            <p><strong>Phạm Thị D</strong> đã xóa khóa học "Sinh học cũ"</p>
                            <div class="activity-time">2 giờ trước</div>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-avatar">E</div>
                        <div class="activity-content">
                            <p><strong>Hoàng Minh E</strong> đã nhận được đánh giá 5 sao cho "Lập trình Python"</p>
                            <div class="activity-time">3 giờ trước</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Create Course Modal -->
    <div id="createModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Tạo khóa học mới</h2>
                <button class="close-btn" onclick="closeModal('createModal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form>
                <div class="form-group">
                    <label class="form-label">Tên khóa học *</label>
                    <input type="text" class="form-input" placeholder="Nhập tên khóa học" required>
                </div>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Danh mục</label>
                        <select class="form-input">
                            <option>Chọn danh mục</option>
                            <option>Toán học</option>
                            <option>Vật lý</option>
                            <option>Hóa học</option>
                            <option>Sinh học</option>
                            <option>Tiếng Anh</option>
                            <option>Lập trình</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Cấp độ</label>
                        <select class="form-input">
                            <option>Chọn cấp độ</option>
                            <option>Cơ bản</option>
                            <option>Trung bình</option>
                            <option>Nâng cao</option>
                            <option>Chuyên sâu</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Mô tả khóa học</label>
                    <textarea class="form-input form-textarea" rows="4" placeholder="Nhập mô tả chi tiết về khóa học"></textarea>
                </div>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Giáo viên phụ trách</label>
                        <select class="form-input">
                            <option>Chọn giáo viên</option>
                            <option>Nguyễn Văn A</option>
                            <option>Trần Thị B</option>
                            <option>Lê Văn C</option>
                            <option>Phạm Thị D</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Số học sinh tối đa</label>
                        <input type="number" class="form-input" placeholder="50" min="1" max="200">
                    </div>
                </div>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Ngày bắt đầu</label>
                        <input type="date" class="form-input">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Ngày kết thúc</label>
                        <input type="date" class="form-input">
                    </div>
                </div>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Học phí (VNĐ)</label>
                        <input type="number" class="form-input" placeholder="1500000">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Trạng thái</label>
                        <select class="form-input">
                            <option>Nháp</option>
                            <option>Hoạt động</option>
                            <option>Tạm dừng</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Hình ảnh khóa học</label>
                    <input type="file" class="form-input" accept="image/*">
                </div>

                <div style="display: flex; gap: 16px; justify-content: flex-end; margin-top: 32px;">
                    <button type="button" class="btn btn-secondary" onclick="closeModal('createModal')">
                        Hủy bỏ
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Tạo khóa học
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Category Management Modal -->
    <div id="categoryModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Quản lý danh mục</h2>
                <button class="close-btn" onclick="closeModal('categoryModal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 32px;">
                <div>
                    <h3 style="margin-bottom: 16px; color: #424874;">Thêm danh mục mới</h3>
                    <div class="form-group">
                        <label class="form-label">Tên danh mục</label>
                        <input type="text" class="form-input" placeholder="Nhập tên danh mục">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Mô tả</label>
                        <textarea class="form-input" rows="3" placeholder="Mô tả về danh mục"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Màu sắc</label>
                        <input type="color" class="form-input" value="#A6B1E1">
                    </div>
                    <button class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm danh mục
                    </button>
                </div>

                <div>
                    <h3 style="margin-bottom: 16px; color: #424874;">Danh sách danh mục</h3>
                    <div style="max-height: 400px; overflow-y: auto;">
                        <div style="display: flex; justify-content: space-between; align-items: center; padding: 16px; background: #F4EEFF; border-radius: 12px; margin-bottom: 12px;">
                            <div>
                                <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 4px;">
                                    <div style="width: 16px; height: 16px; background: #A6B1E1; border-radius: 4px;"></div>
                                    <strong>Toán học</strong>
                                </div>
                                <small style="color: #A6B1E1;">23 khóa học</small>
                            </div>
                            <div style="display: flex; gap: 8px;">
                                <button class="btn btn-secondary btn-small">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-secondary btn-small">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>

                        <div style="display: flex; justify-content: space-between; align-items: center; padding: 16px; background: #F4EEFF; border-radius: 12px; margin-bottom: 12px;">
                            <div>
                                <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 4px;">
                                    <div style="width: 16px; height: 16px; background: #DCD6F7; border-radius: 4px;"></div>
                                    <strong>Vật lý</strong>
                                </div>
                                <small style="color: #A6B1E1;">18 khóa học</small>
                            </div>
                            <div style="display: flex; gap: 8px;">
                                <button class="btn btn-secondary btn-small">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-secondary btn-small">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>

                        <div style="display: flex; justify-content: space-between; align-items: center; padding: 16px; background: #F4EEFF; border-radius: 12px; margin-bottom: 12px;">
                            <div>
                                <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 4px;">
                                    <div style="width: 16px; height: 16px; background: #424874; border-radius: 4px;"></div>
                                    <strong>Hóa học</strong>
                                </div>
                                <small style="color: #A6B1E1;">15 khóa học</small>
                            </div>
                            <div style="display: flex; gap: 8px;">
                                <button class="btn btn-secondary btn-small">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-secondary btn-small">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>

                        <div style="display: flex; justify-content: space-between; align-items: center; padding: 16px; background: #F4EEFF; border-radius: 12px; margin-bottom: 12px;">
                            <div>
                                <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 4px;">
                                    <div style="width: 16px; height: 16px; background: #F4EEFF; border-radius: 4px; border: 2px solid #A6B1E1;"></div>
                                    <strong>Sinh học</strong>
                                </div>
                                <small style="color: #A6B1E1;">12 khóa học</small>
                            </div>
                            <div style="display: flex; gap: 8px;">
                                <button class="btn btn-secondary btn-small">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-secondary btn-small">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="~/js/Course_Management_index.js"></script>
</body>
</html>